{
  "version": "1.0",
  "validation_mode": "LAX",
  "valid_leagues": [
    "NFL",
    "NBA",
    "NCAAB",
    "MLB",
    "CFL",
    "NHL",
    "PingPong",
    "eSports"
  ],
  "schemas": {
    "master_betlog": {
      "required_columns": [
        "timestamp",
        "date",
        "league",
        "sport",
        "event_id",
        "event_name",
        "market_type",
        "selection",
        "odds_decimal",
        "odds_american",
        "stake_amount",
        "potential_return",
        "bookmaker",
        "bet_status",
        "result",
        "pnl",
        "roi_percent",
        "model_confidence",
        "kelly_fraction_applied"
      ],
      "data_types": {
        "timestamp": "ISO8601_DATETIME",
        "date": "YYYY-MM-DD",
        "odds_decimal": "FLOAT",
        "stake_amount": "FLOAT",
        "model_confidence": "FLOAT",
        "pnl": "FLOAT"
      }
    },
    "predictions_daily": {
      "required_fields": [
        "event_id",
        "league",
        "sport",
        "prediction_timestamp",
        "market_type",
        "selection",
        "prediction_probability",
        "model_confidence",
        "recommended_odds_threshold",
        "kelly_recommended_stake_fraction",
        "reasoning"
      ]
    }
  },
  "updatable_parameters": {
    "global": [
      "kelly_multiplier",
      "confidence_threshold",
      "stop_loss_limit"
    ],
    "league": [
      "kelly_multiplier_override",
      "confidence_threshold_override"
    ]
  }
}

